version: '3'
services:
  redis_single:
    image: redis:6.2-alpine
    restart: always
    ports:
      - '6379:6379'
    command: redis-server --save 20 1 --loglevel warning
    volumes: 
      - cache:/data
    networks:
      odoo-net:
        ipv4_address: 172.22.0.109

volumes:
  cache:
    driver: local

networks:
  odoo-net:
    name: odoo-net
    driver: bridge
    ipam:
      config:
        - subnet: 172.22.0.0/16
